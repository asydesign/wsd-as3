package com.wsd.display{	import com.wsd.View		import flash.display.Shape		public class Rectangle extends View	{		private var options:Object = new Object;		public var shape:Shape;				public function Rectangle(x:Number, y:Number, width:Number, height:Number, background = 0xFFFFFF, roundedCorners:Number = 0, alpha:Number = 1, centerRegistrationPoint:Boolean = false)		{			this.x = x			this.y = y			options.width = width			options.height = height			options.background = background			options.roundedCorners = roundedCorners			options.alpha = alpha			options.x = (centerRegistrationPoint ? -(options.width / 2) : 0)			options.y = (centerRegistrationPoint ? -(options.height / 2) : 0)						drawShape()		}				private function drawShape():void		{			shape = new Shape()			shape.graphics.beginFill(options.background, 1)						if (options.roundedCorners > 0)		shape.graphics.drawRoundRect(options.x, options.y, options.width, options.height, options.roundedCorners, options.roundedCorners)			else								shape.graphics.drawRect(options.x, options.y, options.width, options.height)						shape.graphics.endFill()			shape.alpha = options.alpha						addChild(shape)		}	}}