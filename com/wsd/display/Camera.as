package com.wsd.display{	import com.wsd.Base;		import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.Sprite;	import flash.media.Camera;	import flash.media.Video;	public class Camera extends Sprite	{		private var video:Video;				public function Camera(w:int = 0, h:int = 0)		{			var camera:flash.media.Camera = flash.media.Camera.getCamera();						if (w > 0 && h > 0) camera.setMode(w, h, 24);						if (camera != null) {				video = new Video(camera.width, camera.height);				video.attachCamera(camera);								addChild(video);			} else {				Base.log('There is no camera available', 'ERROR');			}		}				public function getBitmapData():BitmapData		{			var bmd:BitmapData = new BitmapData(width, height, true, 0X00000000);			bmd.draw(this);			return bmd;		}				public function getBitmap():Bitmap		{			var bmd:BitmapData = new BitmapData(width, height, true, 0X00000000);			bmd.draw(this);			return new Bitmap(bmd, "auto", true);		}	}}