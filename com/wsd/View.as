package com.wsd{	import flash.display.MovieClip;	import flash.events.Event;		public class View extends MovieClip	{		public function View(callback = null):void		{			super();						if (callback == null) callback = function(e:Event){				removeEventListener(Event.ADDED_TO_STAGE, callback);			};						addEventListener(Event.ADDED_TO_STAGE, callback);			addEventListener(Event.REMOVED_FROM_STAGE, _unset);		}				private function _unset( e:Event ):void		{			removeEventListener(Event.REMOVED_FROM_STAGE, _unset);						unset();		}				public function rand(low:Number=0, high:Number=1) :int		{			return Math.floor(Math.random() * (1+high-low)) + low;		}				private function unset():void		{					}	}}