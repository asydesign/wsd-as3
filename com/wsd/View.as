package com.wsd{	import flash.display.MovieClip;	import flash.events.Event;		public class View extends MovieClip	{		public function View(callback = null):void		{			super();						if (callback == null) callback = function(e:Event){				removeEventListener(Event.ADDED_TO_STAGE, callback);			};						addEventListener(Event.ADDED_TO_STAGE, callback);			addEventListener(Event.REMOVED_FROM_STAGE, _removeListeners);		}				private function _removeListeners( e:Event ):void		{			removeEventListener(Event.REMOVED_FROM_STAGE, _removeListeners);						removeListeners();		}				private function removeListeners():void		{					}	}}